<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">

    <Resource name="jdbc/crud"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/crud"
              username="root"
              password="root"
              maxTotal="15"
              maxIdle="20"
              minIdle="5"
              maxWaitMillis="10000"/>

    <ResourceLink name="jdbc/crud"
                  global="jdbc/MyDB"
                  auth="Container"
                  type="javax.sql.DataSource" />

</Context>